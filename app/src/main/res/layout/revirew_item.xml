<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border"
    android:padding="16dp"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/zenitsu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/review_img"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black_soft"/>

    <ImageView
        android:id="@+id/review_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/profile_picture_of_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zenitsu" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/star_icon"
        app:layout_constraintBottom_toBottomOf="@+id/review_score"
        app:layout_constraintStart_toEndOf="@+id/review_score"
        app:layout_constraintTop_toTopOf="@+id/review_score"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/review_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_score_placeholder"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/review_author"
        app:layout_constraintTop_toBottomOf="@+id/review_author"
        android:textColor="@color/black_soft"/>

    <TextView
        android:id="@+id/review_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/review_content_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/review_score"
        app:layout_constraintTop_toBottomOf="@+id/review_score"
        android:textColor="@color/black_soft"/>
</androidx.constraintlayout.widget.ConstraintLayout>